<section id="gallery">
  <div class="gallery-grid">
    <div class="postGrid">
      <% @posts.each do |post| %>
        <div class="flex postItem">
          <%= link_to update_path(post) do %>
            <div class="imageContainer">
              <picture><%= image_tag post.medium_image, alt: post.title %></picture>
            </div>
          <% end %>
          <%= link_to update_path(post) do %><h5 class="p-0"><%= post.title %></h5><% end %>
        </div>
      <% end %>
    </div>
  </div>
</section>