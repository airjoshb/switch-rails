
<% content_for :head do %>
  <title>Gluten-free Bread & Pastries Baked Fresh in Santa Cruz</title>
  <meta name="description" content="<%= @page.description.to_plain_text.truncate(300) %>" />
  <meta property="og:title", content="Gluten-free Bread & Pastries Baked Fresh in Santa Cruz<" />
  <meta property="og:site_name", content="Switch Bakery" />
  <meta property="og:description", content="<%= @page.description.to_plain_text.truncate(300) %>" />
  <meta property="og:image", content="<%=@all.image.url %>" />
  <meta itemprop="name", content="Gluten-free Bread & Pastries Baked Fresh in Santa Cruz<" />
  <meta itemprop="description", content="<%= @page.description.to_plain_text.truncate(300) %>" />
  <meta itemprop="image", content="<%=@all.image.url %>" />
  <link rel="canonical" href="https://switchbakery.com" />
<% end %>


<section id="hero">
