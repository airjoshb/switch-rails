<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= yield(:head) %>
    <%= favicon_link_tag %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <%= turbo_include_tags %>
  </head>

  <body>
    <div id='header'>
      <div class="brand">
        <%= link_to image_tag("switch-bakery-monterey-logo.svg"), "/" %>
      </div>
    </div>
    <main id="<%= controller_name %>" class="<%= action_name %>">
      <% if flash[:notice] %>
        <div class="notice">
          <%= flash[:notice] %>
        </div>
      <% end %>

      <% if flash[:error] %>
        <div class="error">
          <%= flash[:error] %>
        </div>
      <% end %>
      <%= yield%>
    </main>
    <footer>
      <div class="container">
        <div class="footerContent">
          <div class="copyright center">
            &copy; Switch Bakery <%= Time.now.year %>. All rights reserved.
          </div>
        </div>
      </div>
  </body>
</html>

